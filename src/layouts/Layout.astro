        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/blog">Blog</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <p>Â© {new Date().getFullYear()} Game Reviews Hub</p>
    </footer>
  </body>
</html>
